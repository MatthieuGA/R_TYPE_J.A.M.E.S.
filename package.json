{
  "name": "r-type",
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{cpp,hpp,c,h,cc}": [
      "bash -c 'for file in \"$@\"; do clang-format --dry-run --Werror \"$file\" || (clang-format \"$file\" | diff -u \"$file\" - && exit 1); done' --",
      "clang++ -std=c++23 -fsyntax-only -I./include -I./src"
    ]
  },
  "devDependencies": {
    "@ballcat/commitlint-config-gitmoji": "^1.1.0",
    "@commitlint/cli": "^20.1.0",
    "gitmojis": "^3.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}