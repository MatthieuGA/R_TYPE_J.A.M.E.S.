{
  "name": "r-type",
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{cpp,hpp,c,h,cc}": [
      "clang-format -i",
      "clang++ -std=c++23 -fsyntax-only -I./include -I./src -I./client/include -I./server/include -I./engine/include -I./build/vcpkg_installed/x64-linux/include -I./_deps/googletest-src/googletest/include"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "gitmojis": "^3.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}